{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "pedetails": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {},
  "resources": [
    {
      "location": "[parameters('pedetails')[copyindex('privateendpoint')].location]",
      "name": "[parameters('pedetails')[copyindex('privateendpoint')].privateEndpointName]",
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2020-03-01",
      "copy": {
        "name": "privateendpoint",
        "count": "[length(parameters('pedetails'))]"
      },
      "properties": {
        "subnet": {
          "id": "[parameters('pedetails')[copyindex('privateendpoint')].subnet]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "[parameters('pedetails')[copyindex('privateendpoint')].privateEndpointName]",
            "properties": {
              "privateLinkServiceId": "[parameters('pedetails')[copyindex('privateendpoint')].privateLinkResource]",
              "groupIds": "[parameters('pedetails')[copyindex('privateendpoint')].targetSubResource]"
            }
          }
        ]
      },
      "tags": {}
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('privateDnsDeploymentName-',copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "privateDnsDeployment",
        "count": "[length(parameters('pedetails'))]"
      },
      "dependsOn": [
        "[parameters('pedetails')[copyindex('privateDnsDeployment')].privateEndpointName]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "apiVersion": "2017-05-10",
              "name": "[concat('privatednszone-', copyIndex(1))]",
              "type": "Microsoft.Resources/deployments",
              "subscriptionId": "[subscription().subscriptionId]",
              "resourceGroup": "[resourceGroup().name]",
              "properties": {
                "mode": "Incremental",
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "resources": [
                    {
                      "type": "Microsoft.Network/privateDnsZones",
                      "apiVersion": "2018-09-01",
                      "name": "[parameters('pedetails')[copyindex('privateDnsDeployment')].fqdn]",
                      "location": "global",
                      "tags": {},
                      "properties": {}
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('vnetlinkname-',copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "VirtualNetworkLink",
        "count": "[length(parameters('pedetails'))]"
      },
      "dependsOn": [
        "[concat('privateDnsDeploymentName-',copyIndex(1))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "apiVersion": "2017-05-10",
              "name": "[concat('vnetlinknamewithdns-',copyIndex(1))]",
              "type": "Microsoft.Resources/deployments",
              "subscriptionId": "[subscription().subscriptionId]",
              "resourceGroup": "[resourceGroup().name]",
              "properties": {
                "mode": "Incremental",
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "resources": [
                    {
                      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
                      "apiVersion": "2018-09-01",
                      "name": "[concat(parameters('pedetails')[copyindex('VirtualNetworkLink')].fqdn, '/', uniqueString(parameters('pedetails')[copyindex('VirtualNetworkLink')].virtualNetworkId))]",
                      "location": "global",
                      "properties": {
                        "virtualNetwork": {
                          "id": "[parameters('pedetails')[copyindex('VirtualNetworkLink')].virtualNetworkId]"
                        },
                        "registrationEnabled": false
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('DnsZoneGroup-',copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "DnsZoneGroup",
        "count": "[length(parameters('pedetails'))]"
      },
      "resourceGroup": "[resourceGroup().name]",
      "dependsOn": [
        "[parameters('pedetails')[copyindex('DnsZoneGroup')].privateEndpointName]",
        "[concat('privateDnsDeploymentName-',copyIndex(1))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
              "apiVersion": "2020-03-01",
              "name": "[concat(parameters('pedetails')[copyindex('DnsZoneGroup')].privateEndpointName, '/', 'default')]",
              "location": "[resourceGroup().location]",
              "properties": {
                "privateDnsZoneConfigs": [
                  {
                    "name": "privatelink-blob-core-windows-net",
                    "properties": {
                      "privateDnsZoneId": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Network/privateDnsZones/',parameters('pedetails')[copyindex('DnsZoneGroup')].fqdn)]"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  ]
}